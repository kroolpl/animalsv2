---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { SITE_NAME, CONTACT } from '../utils/constants';

const contactInfo = {
  email: CONTACT.email,
  phone: CONTACT.phone,
  address: CONTACT.address,
  city: CONTACT.city,
  hours: [
    { days: 'Poniedziałek - Piątek', hours: '9:00 - 19:00' },
    { days: 'Sobota', hours: '10:00 - 16:00' },
    { days: 'Niedziela', hours: 'Zamknięte' }
  ]
};

const socialLinks = [
  {
    name: 'Facebook',
    href: 'https://facebook.com/your-page',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>`
  }
];
---

<Layout
  title={`Kontakt | ${SITE_NAME} - Sklep zoologiczny Głogów`}
  description="Skontaktuj się z Animals - najlepszym sklepem zoologicznym w Głogowie. Znajdziesz nas przy ul. Polska 5 lub zadzwoń: 886 147 831. Profesjonalne doradztwo i szeroki wybór produktów dla Twojego pupila."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-emerald-50 via-white to-white">
    <div class="absolute inset-0 bg-grid-neutral-900/[0.02] -z-10"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-emerald-600/10 to-transparent -z-10"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-16">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">
          Skontaktuj się z nami
        </h1>
        <p class="text-lg md:text-xl text-neutral-600">
          Jesteśmy tutaj, aby odpowiedzieć na Twoje pytania i pomóc Ci w każdej sprawie.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 md:py-24" aria-labelledby="contact-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Contact Info -->
        <div class="space-y-12">
          <!-- Quick Contact -->
          <div class="grid sm:grid-cols-2 gap-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm">
              <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-600 mb-4" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Email</h3>
              <a 
                href={`mailto:${contactInfo.email}`} 
                class="text-emerald-600 hover:text-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 rounded-lg px-2 py-1 -ml-2 font-medium inline-flex items-center"
                aria-label="Wyślij email na adres ${contactInfo.email}"
              >
                {contactInfo.email}
              </a>
            </div>
            <div class="bg-white p-6 rounded-2xl shadow-sm">
              <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-600 mb-4" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Telefon</h3>
              <a 
                href={`tel:${contactInfo.phone}`} 
                class="text-emerald-600 hover:text-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 rounded-lg px-2 py-1 -ml-2 font-medium inline-flex items-center"
                aria-label="Zadzwoń pod numer ${contactInfo.phone}"
              >
                {contactInfo.phone}
              </a>
            </div>
          </div>

          <!-- Hours -->
          <div class="bg-white p-8 rounded-2xl shadow-sm">
            <h3 class="text-xl font-bold text-neutral-900 mb-6">Godziny otwarcia</h3>
            <dl class="space-y-4">
              {contactInfo.hours.map(({ days, hours }) => (
                <div class="flex justify-between items-center">
                  <dt class="text-neutral-600">{days}</dt>
                  <dd class="font-medium text-neutral-900">{hours}</dd>
                </div>
              ))}
            </dl>
          </div>

          <!-- Social -->
          <div>
            <h3 class="text-xl font-bold text-neutral-900 mb-4">Znajdź nas</h3>
            <div class="flex gap-4">
              {socialLinks.map(({ name, href, icon }) => (
                <a
                  href={href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-neutral-600 hover:text-emerald-600 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 rounded-lg p-2 transition-colors duration-200"
                  aria-label={`Odwiedź nasz profil na ${name}`}
                  set:html={icon}
                />
              ))}
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-2xl -rotate-1 opacity-10 blur-2xl"></div>
          <div class="relative bg-white p-8 rounded-2xl shadow-xl">
            <h2 id="contact-heading" class="text-2xl font-bold text-neutral-900 mb-6">Napisz do nas</h2>
            <form class="space-y-4" name="contact" method="POST" data-netlify="true">
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-neutral-700 mb-1">Imię i nazwisko</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    autocomplete="name"
                    class="w-full px-4 py-2 rounded-lg border border-neutral-200 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                    aria-required="true"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-neutral-700 mb-1">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    autocomplete="email"
                    class="w-full px-4 py-2 rounded-lg border border-neutral-200 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                    aria-required="true"
                  />
                </div>
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium text-neutral-700 mb-1">Temat</label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-neutral-200 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  aria-required="true"
                >
                  <option value="">Wybierz temat</option>
                  <option value="zapytanie">Zapytanie o produkt</option>
                  <option value="zamowienie">Status zamówienia</option>
                  <option value="wspolpraca">Współpraca</option>
                  <option value="reklamacja">Reklamacja</option>
                  <option value="inne">Inne</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">Wiadomość</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-neutral-200 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                  aria-required="true"
                ></textarea>
              </div>
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <input
                    id="privacy"
                    name="privacy"
                    type="checkbox"
                    required
                    class="h-4 w-4 rounded border-neutral-300 text-emerald-600 focus:ring-emerald-500"
                    aria-required="true"
                  />
                </div>
                <div class="ml-3">
                  <label for="privacy" class="text-sm text-neutral-600">
                    Wyrażam zgodę na przetwarzanie moich danych osobowych zgodnie z polityką prywatności
                  </label>
                </div>
              </div>
              <button
                type="submit"
                class="w-full px-6 py-3 bg-emerald-600 text-white font-medium rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-colors duration-300"
                aria-label="Wyślij formularz kontaktowy"
              >
                Wyślij wiadomość
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-neutral-50">
    <div class="grid lg:grid-cols-2">
      <div class="h-[400px] lg:h-[600px] w-full">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2483.7085476958547!2d16.0846!3d51.6621!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTHCsDM5JzQzLjYiTiAxNsKwMDUnMDQuNiJF!5e0!3m2!1spl!2spl!4v1639580843000!5m2!1spl!2spl"
          width="100%"
          height="100%"
          style="border:0;"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Lokalizacja sklepu Animals na mapie"
          aria-label="Mapa pokazująca lokalizację sklepu Animals w Głogowie"
        ></iframe>
      </div>
      <div class="bg-white p-8 lg:p-16">
        <h2 class="text-2xl font-bold text-neutral-900 mb-6">Jak do nas trafić?</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">
            Znajdziesz nas w centrum Głogowa, przy ulicy {contactInfo.address}. Nasz sklep jest łatwo dostępny zarówno samochodem, jak i komunikacją miejską.
          </p>
          <div class="space-y-2">
            <p class="font-medium text-neutral-900">{contactInfo.address}</p>
            <p class="text-neutral-600">{contactInfo.city}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>