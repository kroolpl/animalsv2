---
import { Image } from 'astro:assets';
import heroImage from '../../images/dog1.jpg';
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src={heroImage}
      alt="Pies w sklepie zoologicznym"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
    <h1 class="text-4xl md:text-6xl font-bold mb-6 font-display">
      Profesjonalny sklep zoologiczny<br/>
      <span class="text-emerald-400">w Głogowie</span>
    </h1>
    <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">
      Wszystko czego potrzebuje Twój pupil w jednym miejscu
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="#polecane-produkty" 
        class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-emerald-600 text-white hover:bg-emerald-700 transition-colors duration-300"
      >
        Zobacz produkty
      </a>
      <a 
        href="/kontakt" 
        class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-white text-emerald-900 hover:bg-emerald-50 transition-colors duration-300"
      >
        Znajdź nas
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg 
      class="w-6 h-6 text-white" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M19 14l-7 7m0 0l-7-7m7 7V3"
      />
    </svg>
  </div>
</section>

<style>
  section {
    margin-top: -5rem; /* Compensate for fixed header */
    padding-top: 5rem;
  }
</style>
