---
import Button from '../ui/Button.astro';
import { SITE_NAME } from '../../utils/constants';
import { Image } from 'astro:assets';
import dogWinterImage from '../../images/dog_winter.jpg';
---

<style>
  .bg-gradient {
    animation: slide 15s ease-in-out infinite alternate;
    background-image: linear-gradient(-60deg, rgb(18, 79, 172) 50%, rgb(86, 52, 211) 50%);
    bottom: 0;
    left: -50%;
    opacity: .15;
    position: absolute;
    right: -50%;
    top: 0;
    z-index: 10;
  }

  .bg-gradient-2 {
    animation-direction: alternate-reverse;
    animation-duration: 20s;
    background-image: linear-gradient(-60deg, rgb(5, 109, 150) 50%, rgb(124, 197, 247) 50%);
  }

  .bg-gradient-3 {
    animation-duration: 25s;
    background-image: linear-gradient(-60deg, rgb(4 120 87) 50%, rgb(110 231 183) 50%);
  }

  @keyframes slide {
    0% {
      transform: translateX(-25%);
    }
    100% {
      transform: translateX(25%);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .delay-200 { animation-delay: 200ms; }
  .delay-400 { animation-delay: 400ms; }
  .delay-600 { animation-delay: 600ms; }

  .floating-paw {
    animation: float 3s ease-in-out infinite;
  }
</style>

<section class="relative h-[90vh] flex items-center overflow-hidden">
  <div class="bg-gradient"></div>
  <div class="bg-gradient bg-gradient-2"></div>
  <div class="bg-gradient bg-gradient-3"></div>
  
  <div class="absolute inset-0 z-0">
    <Image
      src={dogWinterImage}
      alt="Szczęśliwy pies w zimowej scenerii"
      class="w-full h-full object-cover"
      quality={80}
      loading="eager"
      decoding="sync"
      widths={[640, 768, 1024, 1280, 1536, 1920]}
      sizes="100vw"
      format="webp"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 to-black/40"></div>
  </div>
  
  <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
    <div class="flex items-center gap-2 mb-4 animate-fade-in-up">
      <svg class="w-8 h-8 text-emerald-400 floating-paw" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm-6 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm-6 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
      </svg>
      <span class="text-emerald-400 font-semibold tracking-wide">ANIMALS profesjonalny sklep zoologiczny</span>
    </div>
    
    <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in-up delay-200">
      Wszystko czego potrzebuje Twój
      <span class="text-emerald-400">Pupil</span>
    </h1>
    
    <p class="text-xl md:text-2xl mb-8 max-w-2xl animate-fade-in-up delay-400">
      Zdrowe karmy, zabawki i akcesoria najwyższej jakości. 
      Indywidualne podejście i profesjonalne doradztwo dla każdego zwierzaka.
    </p>
    
    <div class="flex gap-4 animate-fade-in-up delay-600">
      <Button href="#polecane-produkty" class="hover:scale-105 transition-transform">
        <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        Polecane produkty
      </Button>
      <Button href="/kontakt" variant="secondary" class="hover:scale-105 transition-transform">
        <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        Skontaktuj się
      </Button>
    </div>
  </div>
</section>