---
import type { Product } from '../../data/products';
import { Image } from 'astro:assets';

interface Props {
  product: Product;
}

const { product } = Astro.props;
---

<div class="bg-neutral-50 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
  <div class="aspect-[4/3] overflow-hidden">
    <Image
      src={product.image}
      alt={product.name}
      width={400}
      height={300}
      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
    />
  </div>
  <div class="p-6">
    <p class="text-sm text-emerald-600 font-semibold mb-2">{product.category}</p>
    <h3 class="text-xl font-bold mb-2">{product.name}</h3>
    <p class="text-neutral-600">{product.description}</p>
  </div>
</div>