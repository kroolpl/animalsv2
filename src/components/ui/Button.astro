---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  class?: string;
}

const { 
  href, 
  variant = 'primary',
  class: className = ''
} = Astro.props;

const baseStyles = "px-8 py-3 rounded-full text-lg font-semibold transition-colors duration-200";
const variants = {
  primary: "bg-emerald-500 hover:bg-emerald-600 text-white",
  secondary: "bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white"
};
---

<a
  href={href}
  class:list={[baseStyles, variants[variant], className]}
>
  <slot />
</a>