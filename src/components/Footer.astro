---
import { SITE_NAME, CONTACT, OPENING_HOURS } from '../utils/constants';

const currentYear = new Date().getFullYear();
const FACEBOOK_URL = 'https://www.facebook.com/p/Animals-Profesjonalny-Sklep-Zoologiczny-61554985716749/';
---

<footer class="bg-neutral-900 text-white mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="space-y-4">
        <h3 class="text-xl font-bold mb-4">{SITE_NAME} Głogów</h3>
        <p class="text-neutral-400">
          Najlepsze karmy i akcesoria dla Twojego pupila w Warszawie.
        </p>
        <a 
          href={FACEBOOK_URL}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-[#1877F2] hover:text-[#0d6efd] transition-colors group"
        >
          <svg 
            class="w-6 h-6 transition-transform duration-300 group-hover:scale-110" 
            fill="currentColor" 
            viewBox="0 0 24 24"
          >
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          <span class="text-neutral-400 hover:text-emerald-400 hover:underline">Odwiedź nas na Facebooku</span>
        </a>
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-4">Kontakt</h3>
        <address class="text-neutral-400 not-italic space-y-2">
          <p>{CONTACT.address}</p>
          <p>{CONTACT.city}</p>
          <p>Tel: {CONTACT.phone}</p>
          <p>Email: {CONTACT.email}</p>
        </address>
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-4">Godziny otwarcia</h3>
        <ul class="text-neutral-400 space-y-2">
          <li>Poniedziałek - Piątek: {OPENING_HOURS.weekdays}</li>
          <li>Sobota: {OPENING_HOURS.saturday}</li>
          <li>Niedziela: {OPENING_HOURS.sunday}</li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-neutral-800 mt-8 pt-8 text-center text-neutral-400">
      <p>&copy; {currentYear} {SITE_NAME}. Wszelkie prawa zastrzeżone.</p>
    </div>
  </div>
</footer>